{% extends 'base.html.twig' %}

{% block title %}Hello AdminController!
{% endblock %}

{% block body %}
    {% for message in app.flashes('admin') %}
        <script type='text/javascript'>
            $(document).ready(function () {
                $('#modal').modal('show');
            });
        </script>
        <div class="modal fade right" name="modal" id="modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-frame modal-side modal-bottom-right" role="document">
                <div class="modal-content">
                    <div class="modal-body">
                        <div class="row d-flex justify-content-center align-items-center">
                            <p class="pt-3 pr-2">{{ message }}
                            </p>
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
    <div class="example-wrapper">
        <div class="d-flex justify-content-between row">
            <h1 class="col-xs-6">Liste des séries</h1>
            <a href="{{ path('ajouter') }}" class="btn btn-primary col-xs-3" role="button">Ajouter une série
                <i class="fas fa-plus-circle"></i>
            </a>
            <a href="{{ path('ajouterGenre') }}" class="btn btn-primary col-xs-3" role="button">Ajouter un genre
                <i class="fas fa-plus-circle"></i>
            </a>
        </div>
        <ul class="list-group mb-3 hover-blue">
            {% for uneSerie in listSeries %}
                <li class="list-group-item align-items-end">
                    <a href="{{ path('editer', {'id': uneSerie.id}) }}" class="btn btn-primary btn-sm" role="button">Editer</a>
                    {{ uneSerie.titre }}
                    <a href="{{ path('supprimer', {'id': uneSerie.id}) }}" class="btn btn-danger btn-sm" style="float: right;" role="button">
                        <i class="far fa-trash-alt"></i>
                    </a>
                </li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}
