{% extends 'base.html.twig' %}

{% block title %}Les Séries
{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px / 1.5 sans-serif;
        }
        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <h1>Toutes les séries</h1>
        {% for uneSerie in listSeries %}
            <div class="card">
                <div class="view overlay">
                    <img class="card-img-top" src="{{ uneSerie.image }}" alt="Card image cap">
                    <a>
                        <div class="mask rgba-white-slight"></div>
                    </a>
                </div>
                <div class="card-body">
                    <h4 class="card-title">{{ uneSerie.titre }}</h4>
                    <a href="{{ path('infoserie', {'id': uneSerie.id}) }}" class="btn btn-primary"><i class="fas fa-info-circle"></i>  Plus d'infos</a>
                </div>
            </div>
            <br>
        {% endfor %}
    </div>
{% endblock %}
