{% extends 'base.html.twig' %}

{% block title %}Hello SerieController!
{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px / 1.5 sans-serif;
        }
        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <h1>Infos sur
            {{ laSerie.titre }}</h1>
        <div class="card">
            <div class="view overlay">
                <img class="card-img-top" src="{{ laSerie.image }}" alt="Card image cap">
                <a>
                    <div class="mask rgba-white-slight"></div>
                </a>
            </div>
            <div class="card-body">
                <h4>Résumé:</h4>
                <p class="card-title">{{ laSerie.resume }}</p>
                <h4>Durée:</h4>
                <p class="card-title">{{ laSerie.duree|date("H:i:s") }}</p>
                <h4>Première diffusion:</h4>
                <p class="card-title">{{ laSerie.premiereDiffusion|date("d-m-Y") }}</p>
            </div>
        </div>
    </div>
{% endblock %}
